<%= form_for(Company.new, url: companies_login_path, html: { class: 'form-horizontal' }) do |f| %>

  <% if alert %>
      <p class="alert alert-error">
        <%= alert %>
      </p>
  <% end %>

  <div class="control-group">
    <%= f.label :username, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :username, class: 'form-control' %>
    </div>
    <%= error_span(Company.new[:username]) %>
  </div>
  <div class="control-group">
    <%= f.label :password, class: 'control-label' %>
    <div class="controls">
      <%= f.password_field :password, class: 'form-control' %>
    </div>
    <%= error_span(Company.new[:encrypted_password]) %>
  </div>
  <%= f.submit 'Login', class: 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")), companies_path, class: 'btn btn-default' %>

<% end %>
