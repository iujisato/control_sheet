<%= form_for @cash, :html => { :class => "form-horizontal cash" } do |f| %>

    <% if @cash.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@cash.errors.count, "error") %> prohibited this cash from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @cash.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :value, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :value, :class => 'form-control' %>
    </div>
    <%= error_span(@cash[:value]) %>
  </div>
  <div class="control-group">
    <%= f.label :employee_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select :employee_id, current_company.employees, :id, :name, {}, :class => 'form-control' %>
    </div>
    <%= error_span(@cash[:employee_id]) %>
  </div>

  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            cashes_path, :class => 'btn btn-default' %>

<% end %>
